<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#00ffffff"
    android:minHeight="40dp" >

    <TextView
        android:id="@+id/tv_dishes_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:textColor="#ff000000"
        android:textSize="@dimen/dishes_name_text_size" />

    <TextView
        android:id="@+id/tv_dishes_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_dishes_name"
        android:gravity="center"
        android:textColor="#ffff0000"
        android:textSize="@dimen/item_price_text_size" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:background="@drawable/input_dishes_delete" />

</RelativeLayout>